<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="880dp"
        android:layout_height="660dp"
        app:layout_constraintBottom_toTopOf="@id/btnTakePhoto"
        app:layout_constraintDimensionRatio="1600:1200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <!-- 录像计时提示框（默认隐藏，录像时显示） -->
    <TextView
        android:id="@+id/RecordTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textColor="#FF0000"
    android:textSize="24sp"
    android:textStyle="bold"
    android:padding="12dp"
    android:background="#88000000"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="20dp"/>


    <ImageView
        android:id="@+id/btnTakePhoto"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/camera_button_with_background"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:contentDescription="拍照按钮"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <!-- 右侧新增按钮（示例：相册按钮） -->
    <ImageView
        android:id="@+id/btnRight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_gallery"
    android:clickable="true"
    android:focusable="true"
    android:elevation="8dp"
    android:contentDescription="相册按钮"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/btnTakePhoto"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    />

</androidx.constraintlayout.widget.ConstraintLayout>